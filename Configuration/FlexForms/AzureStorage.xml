<?xml version="1.0" encoding="utf-8"?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <general>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.general
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <usehttps>
                        <TCEforms>
                            <label>LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.usehttps</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </usehttps>
                    <containerName>
                        <TCEforms>
                            <label>LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.container</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>required,nospace,lower,alphanum_x</eval>
                                <max>63</max>
                            </config>
                        </TCEforms>
                    </containerName>
                    <accountName>
                        <TCEforms>
                            <label>LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.accountname</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>required,nospace,lower</eval>
                                <max>24</max>
                            </config>
                        </TCEforms>
                    </accountName>
                    <accountKey>
                        <TCEforms>
                            <label>LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.accountkey</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>required</eval>
                            </config>
                        </TCEforms>
                    </accountKey>
                    <sftpIdentifier>
                        <TCEforms>
                            <label>SFTP identifier</label>
                            <description>Optional SFTP identifier (e.g. user@host) to use SFTP via CLI instead of the azure API for some actions</description>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </sftpIdentifier>
                </el>
            </ROOT>
        </general>
        <cdn>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.cdn
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <cdnendpoint>
                        <TCEforms>
                            <label>LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.endpoint</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>nospace,trim</eval>
                            </config>
                        </TCEforms>
                    </cdnendpoint>
                    <cacheControl>
                        <TCEforms>
                            <label>LLL:EXT:azurestorage/Resources/Private/Language/locallang.xlf:config.label.cachecontrol</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </cacheControl>
                </el>
            </ROOT>
        </cdn>
    </sheets>
</T3DataStructure>